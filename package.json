{
    "name": "tileboard",
    "version": "0.1.0",
    "description": "Expressive MIDI controller built with web technologies for touch devices",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danalizieors/tileboard.git"
    },
    "scripts": {
        "format": "prettier --write .",
        "check:compile": "tsc",
        "check:format": "prettier --check .",
        "check:test": "npm run test",
        "check": "npm-run-all check:*",
        "test": "jest --config .jestrc.json",
        "start:client": "parcel client/index.html --cache-dir build/cache --out-dir build/start/client",
        "start:server": "ts-node-dev server/index.ts",
        "start": "npm-run-all --parallel start:*",
        "build:client:local": "parcel build client/index.html --cache-dir build/cache --out-dir build/local/client",
        "build:client:deploy": "parcel build client/index.html --cache-dir build/cache --out-dir build/deploy/client --public-url /tileboard/",
        "build:client": "npm-run-all --parallel build:client:*",
        "build": "npm-run-all --parallel build:*",
        "clean": "rm --recursive build",
        "serve:client": "serve --listen 1234 --no-clipboard build/local/client/",
        "serve:server": "ts-node server/index.ts",
        "serve": "npm-run-all --parallel serve:*",
        "deploy": "sh deploy.sh build/deploy/client"
    },
    "dependencies": {
        "@tensorflow/tfjs-backend-cpu": "2.0.0",
        "@tensorflow/tfjs-core": "2.0.0",
        "midi": "^1.0.0",
        "ramda": "^0.27.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sockette": "^2.0.6",
        "styled-components": "^5.1.0",
        "ws": "^7.4.6"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-react": "^7.9.4",
        "@types/jest": "^25.2.3",
        "@types/ramda": "^0.27.6",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/styled-components": "^5.1.0",
        "@types/ws": "^7.2.4",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.0.5",
        "prettier-plugin-organize-imports": "^1.0.4",
        "serve": "^11.3.1",
        "ts-jest": "^26.0.0",
        "ts-node": "^8.10.1",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.9.3"
    }
}
